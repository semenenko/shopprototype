
@{
    ViewBag.Title = "Как можно быстрее";
}

<h2>Как можно быстрее</h2>

<div class="checkbox checkbox-primary">
	<input type="checkbox" id="ch_now" name="Now" /><label for="ch_now">Прямо сейчас</label>
</div>
<div class="form-group">
	<input type="text" class="form-control datepicker" name="date" placeholder="Выберите дату..." />
</div>

<div class="form-group">
	<input type="text" class="form-control timepicker" name="time" placeholder="Выберите время..." />
</div>

<div class="btn-group btn-group-justified" role="group" aria-label="...">
	@Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-danger" })
	@Html.ActionLink("Далее", "AsapSearchFacilities", null, new { @class = "btn btn-primary" })
</div>

@section scripts{
	<script type="text/javascript">
        $(function () {
        	$('.datepicker').pickadate({ showMonthsShort: true });
        	$('.timepicker').pickatime({interval:15});
        });
	</script>
}

@section styles{
	<style type="text/css">
		input, select, textarea
		{
			max-width: none;
		}
	</style>
}