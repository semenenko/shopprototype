@using ShopPrototype.Modules.Admin.Models

@model FacilityCategoryModel

<h3>@Model.Title</h3>
@using (Html.BeginForm("AddOrUpdateCategory", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
{
	@Html.HiddenFor(m => m.Id)
	<div class="form-group">
		@Html.LabelFor(m => m.Title)
		<div class="col-sm-10">
			@Html.EditorFor(m => m.Title, new { @class = "form-control", @type="text", placeholder = "Название категории" })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.SortOrder, "Номер")
		<div class="col-sm-10">
			@Html.EditorFor(m => m.SortOrder, new { @class = "form-control", @type = "number", placeholder = "Порядок вывода" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">Добавить</button>
		</div>
	</div>
}
