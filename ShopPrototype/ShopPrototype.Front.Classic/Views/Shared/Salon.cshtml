@using ShopPrototype.Modules.Common.Models
@model SalonModel

@{
    ViewBag.Title = "Салон - " + Model.SalonName;
}

<h2>@ViewBag.Title</h2>
<h3>Основные данные</h3>
@using (Html.BeginForm("Salon", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
{
	@Html.HiddenFor(m => m.Id)
	<div class="form-group">
		@Html.LabelFor(m => m.SalonName, "Название", new { @class = "col-md-2 control-label" })
		<div class="col-sm-10">
			@Html.EditorFor(m => m.SalonName, new { htmlAttributes = new { @class = "form-control", @type = "text", placeholder = "Название" } })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Address, "Адрес", new { @class = "col-md-2 control-label" })
		<div class="col-sm-10">
			@Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control", @type = "text", placeholder = "Название" } })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Phone, "Телефон", new { @class = "col-md-2 control-label" })
		<div class="col-sm-10">
			@Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control", @type = "text", placeholder = "Название" } })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Lat, "Широта", new { @class = "col-md-2 control-label" })
		<div class="col-sm-10">
			@Html.EditorFor(m => m.Lat, new { htmlAttributes = new { @class = "form-control", @type = "text", placeholder = "Широта" } })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Long, "Долгота", new { @class = "col-md-2 control-label" })
		<div class="col-sm-10">
			@Html.EditorFor(m => m.Long, new { htmlAttributes = new { @class = "form-control", @type = "text", placeholder = "Долгота" } })
		</div>
	</div>
	<h3>Услуги</h3>
	<table class="table table-condensed">
		<thead>
			<tr><th>Категория</th><th>Название</th><th>Доступна</th><th>Продолжительность, мин</th></tr>
		</thead>
		<tbody>
			@Html.EditorFor(x => x.Facilities)
		</tbody>
	</table>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-primary">Сохранить</button>
			@Html.ActionLink("Отмена", "Salons", "Admin", null, new { @class = "btn btn-default" })
			@if (Model.Id != 0)
			{
				@Html.ActionLink("Расписание", "Calendar", "Admin", new { salonId = Model.Id }, new { @class = "btn btn-default" })
			}
		</div>
	</div>
}

