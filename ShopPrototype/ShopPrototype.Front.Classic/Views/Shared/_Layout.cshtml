<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - VNEZZAPNO</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
	<link rel="stylesheet" href="~/Content/font-awesome.min.css" />
	<link rel="stylesheet" href="~/Content/awesome-bootstrap-checkbox.css" />
	<link rel="stylesheet" href="~/Pickadate/themes/default.css" />
	<link rel="stylesheet" href="~/Pickadate/themes/default.date.css" />
	<link rel="stylesheet" href="~/Pickadate/themes/default.time.css" />
	@RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("VNEZZAPNO!", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
					<li>@Html.ActionLink("Поиск", "Index", "Search")</li>
					@if (Request.IsAuthenticated)
					{
						<li>@Html.ActionLink("Категории", "CategoriesList", "Admin") </li>
						<li>@Html.ActionLink("Салоны", "Salons", "Admin")</li>
					}
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Тестовый поиск <span class="caret"></span></a>
						<ul class="dropdown-menu">
							<li>@Html.ActionLink("По карте", "SearchByMap", "AdvancedSearch")</li>
						</ul>
					</li>
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - VNEZZAPNO</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
	<script type="text/javascript" src="~/Scripts/moment-with-locales.min.js"></script>
	<script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>

	<script src="~/Pickadate/picker.js" type="text/javascript"></script>
	<script src="~/Pickadate/picker.date.js" type="text/javascript"></script>
	<script src="~/Pickadate/picker.time.js" type="text/javascript"></script>
	<script src="~/Pickadate/legacy.js" type="text/javascript"></script>
	<script src="~/Pickadate/translations/ru_RU.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
